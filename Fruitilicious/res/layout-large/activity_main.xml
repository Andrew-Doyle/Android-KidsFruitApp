<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollView2"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true"
    tools:context=".MainActivity" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context=".MainActivity" >



        <LinearLayout
            android:id="@+id/linLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
      
            android:layout_marginTop="15dp" >

            <ImageButton
                android:id="@+id/imageButtonApple"
                android:contentDescription="@string/apple"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="15dp"
                android:layout_weight="1"
                android:background="@null"
                android:src="@drawable/apple2" />

            <ImageButton
                android:id="@+id/imageButtonAvocado"
                android:contentDescription="@string/avocado"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="15dp"
                android:layout_weight="1"
                android:background="@null"
                android:src="@drawable/avocado2" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linLayout1"
            android:layout_marginTop="40dp" >

            <ImageButton
                android:id="@+id/imageButtonBanana"
                android:contentDescription="@string/banana"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="15dp"
                android:layout_weight="1"
                android:background="@null"
                android:src="@drawable/banana2" />

            <ImageButton
                android:id="@+id/imageButtonGrapes"
                android:contentDescription="@string/grapes"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="15dp"
                android:layout_weight="1"
                android:background="@null"
                android:src="@drawable/grapes2" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linLayout3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linLayout2"
            android:layout_marginTop="40dp" >

            <ImageButton
                android:id="@+id/imageButtonKiwi"
                android:contentDescription="@string/kiwi"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:background="@null"
                android:src="@drawable/kiwi2" />

            <ImageButton
                android:id="@+id/imageButtonOrange"
                android:contentDescription="@string/orange"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="15dp"
                android:layout_weight="1"
                android:background="@null"
                android:src="@drawable/orange2" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linLayout4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linLayout3"
            android:layout_marginTop="40dp" >

            <ImageButton
                android:id="@+id/imageButtonStrawberry"
                android:contentDescription="@string/strawberry"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:background="@null"
                android:src="@drawable/strawberry2" />

            <ImageButton
                android:id="@+id/imageButtonWatermelon"
                android:contentDescription="@string/watermelon"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="15dp"
                android:layout_weight="1"
                android:background="@null"
                android:src="@drawable/watermelon2" />
        </LinearLayout>
    </RelativeLayout>

</ScrollView>